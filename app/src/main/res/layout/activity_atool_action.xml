<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_atool_action"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wuwei.mymobliesafe.act.AToolAction">


    <TextView
        style="@style/TitleBarTextView"
        android:text="高级工具"/>

    <TextView
        android:id="@+id/tv_query_phone_address"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="归属地查询"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/first_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_sms_backup"
        android:padding="6dp"
        android:text="短信备份"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/middle_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_app_lock"
        android:padding="6dp"
        android:text="程序锁"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/middle_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_service"
        android:padding="6dp"
        android:text="服务管理"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/last_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--<TextView
        android:id="@+id/tv_sms_send"
